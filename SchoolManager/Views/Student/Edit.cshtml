@model SchoolManager.EditStudentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Студент</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.StudentViewModel.Id)
            @Html.HiddenFor(x => x.StudentViewModel.ClassId)
            @Html.HiddenFor(x => x.StudentViewModel.Class)
            @Html.HiddenFor(x => x.StudentViewModel.SchoolId)
            @Html.HiddenFor(x => x.StudentViewModel.School)
            @Html.HiddenFor(x => x.PaginationParameters.PageNumber)
            @Html.HiddenFor(x => x.PaginationParameters.PageSize)
            <div class="form-group">
                <label asp-for="StudentViewModel.FirstName" class="control-label"></label>
                <input asp-for="StudentViewModel.FirstName" class="form-control" />
                <span asp-validation-for="StudentViewModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentViewModel.LastName" class="control-label"></label>
                <input asp-for="StudentViewModel.LastName" class="form-control" />
                <span asp-validation-for="StudentViewModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentViewModel.Patronymic" class="control-label"></label>
                <input asp-for="StudentViewModel.Patronymic" class="form-control" />
                <span asp-validation-for="StudentViewModel.Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentViewModel.Phone" class="control-label"></label>
                <input asp-for="StudentViewModel.Phone" class="form-control" />
                <span asp-validation-for="StudentViewModel.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="classDropdown" class="control-label">@Html.DisplayNameFor(x => @Model.StudentViewModel.Class)</label>
                <select class="form-control basicAutoSelect classDropdown" name="classDropdown" id="classDropdown"
                        placeholder="Выберите класс"
                        autocomplete="off"></select>
                <span asp-validation-for="StudentViewModel.ClassId" class="text-danger" id="classDropdownError"></span>
            </div>
            <div class="form-group">
                <label for="schoolDropdown" class="control-label">@Html.DisplayNameFor(x => @Model.StudentViewModel.School)</label>
                <select class="form-control basicAutoSelect schoolDropdown" name="schoolDropdown" id="schoolDropdown"
                        placeholder="Выберите школу"
                        data-url="/School/Search?" autocomplete="off"></select>
                <span asp-validation-for="StudentViewModel.SchoolId" class="text-danger" id="schoolDropdownError"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад к списку", "Index", "Home", new { PageNumber = Model.PaginationParameters.PageNumber, PageSize = Model.PaginationParameters.PageSize })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/gh/xcash/bootstrap-autocomplete@v2.3.5/dist/latest/bootstrap-autocomplete.min.js"></script>
    <script src="~/lib/bootstrap-autocomplete/bootstrap-autocomplete.min.js"></script>
    <script src="~/js/student/edit.js" type="text/javascript"></script>
       
}
